@using (Html.Begin(new Card().Header("Heading", HeadingSize.H4).Title("Title", HeadingSize.H4).Subtitle("subtitle").Footer("footer")))
{
    <p class="card-text">This is the text for the card</p>
}

<hr />*@

@Html.BuildHeading(HeadingSize.H2, "Tabs")
@using (var tabs = Html.Begin(TabType.Tabs, false, true))
{
    @tabs.Tab(new Tab("Baseball", new Icon("fa fa-user"), "baseball", true))
    @tabs.Tab(new Tab("Football", new Icon("fa fa-truck"), "football"))
    @tabs.Tab(new Tab("Soccer", new Icon("fa fa-truck"), "soccer"))
    @tabs.Tab(new Tab("Tennis", new Icon("fa fa-truck"), "tennis"))
    @tabs.Tab(new Tab("Swimming", new Icon("fa fa-truck"), "swimming"))

    using (tabs.BeginTab())
    {
        <p>The baseball tab</p>
    }

    using (tabs.BeginTab())
    {
        <p>The football tab</p>
    }

    using (tabs.BeginTab())
    {
        <p>The soccer tab</p>
    }

    using (tabs.BeginTab())
    {
        <p>The tennis tab</p>
    }

    using (tabs.BeginTab())
    {
        <p>The swimming tab</p>
    }
}

<hr />

@Html.BuildHeading(HeadingSize.H2, "Accordion")
@using (var accordion = Html.Begin(new Accordion("test-accordion")))
{
    using (accordion.BeginPanel(new Panel("1").Title("Section 1").Color(Colors.Danger)))
    {
        <p>The content for the first section </p>
    }

    using (accordion.BeginPanel(new Panel("2").Title("Section 2")))
    {
        <p>The content for second section</p>
    }

    using (accordion.BeginPanel(new Panel("3").Title("Section 3").Color(Colors.Success)))
    {
        <p>The content for third section</p>
    }
}

@Html.BuildHeading(HeadingSize.H2, "Steps")
@using (var steps = Html.BeginSteps())
{
    @steps.AddStep("Step 1", new Icon("fa fa-truck"), "Description of the step", true)
    @steps.AddStep("Step 2", new Icon("fa fa-briefcase"), "Description of the next step", true)
    @steps.AddStep("Step 3", new Icon("fa fa-user"), "Description of the last step")
}

<hr />

@Html.BuildHeading(HeadingSize.H2, "Input Groups")
@Html.InputGroupFor(x => x.Email).HtmlAttributes(new { @placeholder = "Email Address..." }).PrependIcon(new Icon("fa fa-envelope")).HasLabelWithColon().HasValidation()
@Html.InputGroupFor(x => x.Email, SelectListUtils.BuildSelectList(new CustomSelectList("Option 1", "Option 1").Add("Option 2", "Option 2")), "---Select One---").HasLabelWithColon()

@Html.BuildHeading(HeadingSize.H2, "Datetimepicker")
@Html.InputGroupFor(x => x.Email).AppendIcon(new Icon("fa fa-calendar")).DatetimepickerClass("datetimepicker").HasLabel().IsRequired()

@Html.BuildHeading(HeadingSize.H2, "Form Groups")
@Html.FormGroupFor(x => x.Email, ControlType.Textbox).HtmlAttributes(new { @placeholder = "Email Address..." }).IsRequired().HelpText("This is the help text")

@Html.BuildHeading(HeadingSize.H2, "Textarea")
@Html.FormGroupFor(x => x.Email, ControlType.TextArea).HtmlAttributes(new { @placeholder = "Enter text..." }).Rows(10).Columns(4).HelpText("This is the help text section")

@Html.BuildHeading(HeadingSize.H2, "Dropdown")
@Html.FormGroupFor(x => x.Email, SelectListUtils.YesNoDropdown(), "--Select One--")
<br />
@Html.FormGroupFor(x => x.Email, SelectListUtils.BuildSelectList(new CustomSelectList("Option 1", "1").Add("Option 2", "2")), "--Select One--")

@Html.BuildHeading(HeadingSize.H2, "Checkbox")
@Html.BuildCheckBoxFor(x => x.RememberMe, CheckboxType.Checkbox).HasLabel().IsRequired()

@Html.BuildHeading(HeadingSize.H2, "Labels")
<div class="form-group">
    @Html.BuildLabel(Colors.Danger, "Help!")
    @Html.BuildLabel(Colors.Primary, "Good Job!")
</div>

@Html.BuildHeading(HeadingSize.H2, "Links")
<div class="form-gorup">
    @Html.BuildActionLink("Home", "Index", "Go Home").Icon(new Icon("fa fa-home")).HtmlAttributes(new { @class = "btn btn-primary" }).RouteValues(new { @id = 50 })
    @Ajax.BuildActionLink("Home", "Index", "Test Link").HtmlAttributes(new { @class = "btn btn-success" }).Icon(new Icon("fa fa-check"))
</div>

@Html.BuildHeading(HeadingSize.H2, "Validation Tests")
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.FormGroupFor(x => x.Email, ControlType.Textbox).HtmlAttributes(new { @placeholder = "Enter email..." }).HasLabelWithColon()
    @Html.FormGroupFor(x => x.Password, ControlType.Password).HtmlAttributes(new { @placeholder = "Enter password..." }).HasLabelWithColon()
    @Html.InputGroupFor(x => x.NoFutureDate).AppendIcon(new Icon("fa fa-calendar")).DatetimepickerClass("datetimepicker").HasLabelWithColon().HasValidation()
    @Html.InputGroupFor(x => x.NoPastDate).AppendIcon(new Icon("fa fa-calendar")).DatetimepickerClass("datetimepicker").HasLabelWithColon().HasValidation()
    @Html.BuildCheckBoxFor(x => x.RememberMe, CheckboxType.Checkbox).HasLabel().IsRequired()

    <div class="well">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
}

@section scripts {
    <script type="text/javascript">
        $().ready(function () {
            $('#modal-button').on('click', function () {
                $('#test-modal').modal('show');
            });

            $('[data-toggle="tooltip"]').tooltip();
            $('.datetimepicker').datetimepicker();
        });
    </script>
}
